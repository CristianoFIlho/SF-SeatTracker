<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Showtime Selector</masterLabel>
    <description>Select movie showtimes with interactive theater map</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightningCommunity__Page">
            <property name="movieId" type="String" label="Movie ID" required="true"/>
            <property name="movieName" type="String" label="Movie Name" required="false"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
