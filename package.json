{
  "name": "sf-seattracker",
  "version": "1.0.0",
  "description": "Cinema seat management system developed in Lightning Web Components (LWC) for Salesforce",
  "author": "Cristiano Filho",
  "license": "MIT",
  "scripts": {
    "lint": "eslint **/lwc/**/*.js",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest --coverage",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "deploy": "sf project deploy start -d force-app/main/default",
    "deploy:check": "sf project deploy start -d force-app/main/default --dry-run",
    "deploy:validate": "sf project deploy start -d force-app/main/default -l RunLocalTests --dry-run",
    "test:apex": "sf apex run test -l RunLocalTests -w 10",
    "test:apex:coverage": "sf apex run test --code-coverage",
    "open:org": "sf org open",
    "org:display": "sf org display",
    "org:list": "sf org list",
    "create:scratch": "sf org create scratch -f config/project-scratch-def.json -a SeatTrackerOrg -d 30 -y",
    "assign:permset": "sf org assign permset -n Cinema_Reservation_Admin",
    "import:data": "sf data import tree --plan data/sample-data-plan.json",
    "tail:log": "sf apex tail log",
    "login": "sf org login web --alias DevOrg --set-default"
  },
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.7.2",
    "@prettier/plugin-xml": "^3.2.2",
    "@salesforce/eslint-config-lwc": "^3.5.2",
    "@salesforce/eslint-plugin-aura": "^2.1.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/sfdx-lwc-jest": "^3.1.1",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1",
    "prettier-plugin-apex": "^2.0.1"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
}
